<script>
        document.addEventListener('DOMContentLoaded', function () {
            var calendarEl = document.getElementById('calendar');
            //var popupText = document.getElementById("dateSelected");
            var popup = document.getElementById("popup");
            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                firstDay: 1,
                selectable: true,
                businessHours: true,
                locale: 'DK',
                longPressDelay: 1,
                dayMaxEvents: true, // allow "more" link when too many events


                select: function (info) {
                    document.getElementById("date-start").setAttribute("value", info.startStr);
                    document.getElementById("date-end").setAttribute("value", info.endStr);
                    popup.style.display = "block";
                },

                /*dateClick: function (info) {
                    popupText.innerHTML = "Du har valgt: " + info.dateStr;
                },*/

                events: [
                    {
                        start: '2021-11-10',
                        end: '2021-11-15',
                        display: 'background',
                        classNames: ['available']
                    },
                    {
                        start: '2021-11-19',
                        end: '2021-11-21',
                        display: 'background',
                        classNames: ['unavailable']
                    }
                ],
            });
            document.getElementById("cancel").addEventListener("click", function () {
                popup.style.display = "none";
            });
            document.getElementById("save").addEventListener("click", function () {
                popup.style.display = "none";
            });
            calendar.render();
        });
</script>
<div id="calendar-wrapper">
    <div id="popup" class="roundedBox">
        <h3>Sæt rådighed</h3>

        <div class="radio-group">
            <label for="pick-available">
                <input type="radio" id="pick-available" name="availability" />
                Available
            </label>
            <br />
            <label for="pick-unavailable">
                <input type="radio" id="pick-unavailable" name="availability" />
                Unavailable
            </label>
        </div>

        <label for="date-start">Fra</label>
        <input type="date" id="date-start" name="date-start" /><br />

        <label for="date-end">Til</label>
        <input type="date" id="date-end" name="date-end" />
        <div class="button-group">
            <button id="cancel">Annuller</button>
            <button id="save">Tilføj</button>
        </div>

    </div>
    <div id='calendar'></div>
    <div class="calendar-tooltip">
        <div class="available">
            Available
        </div>
        <div class="unavailable">
            Unavailable
        </div>
    </div>
</div>